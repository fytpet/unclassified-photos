<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Unclassified Photos</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="global.css">
  <script src="./cookies.js"></script>
  <script>
    const authCode = getCookie("auth_code");
    if (!authCode) {
      window.location = "/login";
    }
    function signOut() {
      deleteCookie("auth_code");
      window.location = "/login";
    }
  </script>
</head>

<body>
  <nav class="has-background-primary p-2">
    <a class="is-size-4 has-text-weight-bold has-text-white" href="/">Unclassified Photos</a>
    <button class="button is-light" onclick="signOut()">Sign out</button>
  </nav>
  <section class="section">
    <p class="is-size-5 pb-5">
      Search your Google Photos Library for any unclassified photos (photos that are not in any album).
    </p>
    <a href="/results">
      <button class="button is-primary">Search</button>
    </a>
  </section>
</body>

</html>
